<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_back"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_new_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_white" />

        <EditText
            android:id="@+id/phone_contact"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="11"
            android:textColor="?attr/ic"
            android:textSize="20pt" />

        <ImageView
            android:background="@drawable/ripple"
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backspace_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="25dp">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="1"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_2"
            android:onClick="press_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/circle_background"
            android:text="2"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_3"
            android:onClick="press_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="3"
            android:textSize="12pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_4"
            android:onClick="press_4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="4"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_5"
            android:onClick="press_5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/circle_background"
            android:text="5"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_6"
            android:onClick="press_6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="6"
            android:textSize="12pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_7"
            android:onClick="press_7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="7"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_8"
            android:onClick="press_8"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/circle_background"
            android:text="8"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_9"
            android:onClick="press_9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="9"
            android:textSize="12pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_star"
            android:onClick="press_star"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="*"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_0"
            android:onClick="press_0"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/circle_background"
            android:text="0"
            android:textSize="12pt" />

        <Button
            android:id="@+id/btn_sharp"
            android:onClick="press_sharp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle_background"
            android:text="#"
            android:textSize="12pt" />
    </LinearLayout>

    <ImageView
        android:id="@+id/call"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_call"
        android:padding="15dp"
        android:src="@drawable/ic_call"
        android:textSize="20pt" />


</LinearLayout>